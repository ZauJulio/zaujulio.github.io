{
  "$schema": "https://turborepo.com/schema.v2.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "interactive": true,
      "persistent": true
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^build"]
    }
  }
}
