{
  "root": false,
  "$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              {
                "source": ":NODE:",
                "type": true
              },
              ":NODE:",
              ":BLANK_LINE:",
              {
                "source": ["react", "react-dom", "*react*", "*hookform*", "*radix*"],
                "type": true
              },
              ["react", "react-dom", "*react*", "*hookform*", "*radix*"],
              ":BLANK_LINE:",
              {
                "source": [
                  ":PACKAGE:",
                  "!react",
                  "!react-dom",
                  "!*react*",
                  "!*hookform*",
                  "!*radix*",
                  "!@app/**",
                  "!@pages/**",
                  "!@services/**",
                  "!@contexts/**",
                  "!@components/**",
                  "!@hooks/**",
                  "!@repositories/**",
                  "!@assets/**",
                  "!@styles/**"
                ],
                "type": true
              },
              [
                ":PACKAGE:",
                "!react",
                "!react-dom",
                "!*react*",
                "!*hookform*",
                "!*radix*",
                "!@app/**",
                "!@pages/**",
                "!@services/**",
                "!@contexts/**",
                "!@components/**",
                "!@hooks/**",
                "!@repositories/**",
                "!@assets/**",
                "!@styles/**"
              ],
              ":BLANK_LINE:",
              {
                "source": ["@contexts/**", "@contexts"],
                "type": true
              },
              ["@contexts/**", "@contexts"],
              ":BLANK_LINE:",
              ":BLANK_LINE:",
              ":BLANK_LINE:",
              ["@app/**"],
              ":BLANK_LINE:",
              ["@pages/**"],
              ":BLANK_LINE:",
              ["@services/**"],
              ":BLANK_LINE:",
              ["@components/**", "@components"],
              ":BLANK_LINE:",
              ["@hooks/**", "@hooks"],
              ":BLANK_LINE:",
              ["@repositories/**", "@repositories"],
              ":BLANK_LINE:",
              ["@assets/**"],
              ":BLANK_LINE:",
              {
                "source": [":PATH:", "!**/*.css", "!**/*.scss"],
                "type": true
              },
              [":PATH:", "!**/*.css", "!**/*.scss"],
              ":BLANK_LINE:",
              {
                "source": ["@styles/**", "@styles", "**/*.css", "**/*.scss"],
                "type": true
              },
              ["@styles/**", "@styles", "**/*.css", "**/*.scss"]
            ]
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.react-router",
      "!**/.lintstagedrc.json",
      "!**/.github",
      "!**/.obsidian",
      "!**/.next",
      "!**/dist",
      "!**/node_modules",
      "!**/storybook-static"
    ]
  },
  "formatter": {
    "attributePosition": "auto",
    "enabled": true,
    "formatWithErrors": false,
    "includes": ["**", "!**/.lintstagedrc.json", "!**/.obsidian", "!**/types-and-hooks.tsx"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noLabelWithoutControl": "off",
        "noNoninteractiveTabindex": "warn",
        "noStaticElementInteractions": "warn",
        "noSvgWithoutTitle": "off",
        "useAltText": "warn",
        "useButtonType": "off",
        "useGenericFontNames": "warn",
        "useIframeTitle": "off",
        "useKeyWithClickEvents": "off",
        "useSemanticElements": "warn",
        "useValidAnchor": "off"
      },
      "complexity": {
        "noBannedTypes": "warn",
        "noForEach": "warn",
        "noUselessFragments": "warn",
        "useLiteralKeys": "off",
        "useOptionalChain": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "useJsxKeyInIterable": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "warn"
      },
      "recommended": true,
      "style": {
        "noInferrableTypes": "error",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "off",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "warn",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "off",
        "useEnumInitializers": "error",
        "useExportType": "warn",
        "useImportType": "warn",
        "useNumberNamespace": "error",
        "useSelfClosingElements": "warn",
        "useSingleVarDeclarator": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noConfusingVoidType": "warn",
        "noEmptyBlock": "warn",
        "noExplicitAny": "warn",
        "noShorthandPropertyOverrides": "warn",
        "useIsArray": "warn",
        "useIterableCallbackReturn": "warn"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
