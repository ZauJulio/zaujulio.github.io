{
  "name": "portfolio",
  "private": true,
  "license": "MIT",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run sitemap && turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "check": "biome check --write --config-path ./packages/configs/biome.json . --css-parse-tailwind-directives=true",
    "sitemap": "bun scripts/generate-sitemap.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^25.0.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.4",
    "typescript": "^5.7.3"
  }
}
