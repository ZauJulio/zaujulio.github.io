{
  "extends": "../../packages/configs/vite.json",
  "compilerOptions": {
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@content/*": ["content/*"]
    }
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "src",
    "tailwind.config.ts",
    "src/content/**/*.d.ts",
    "../../packages/ui/components/**/*"
  ]
}
