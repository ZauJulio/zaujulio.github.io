{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Language",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "nativeName", "flag", "proficiency", "color", "levels"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "nativeName": { "type": "string" },
          "flag": { "type": "string" },
          "proficiency": {
            "type": "string",
            "enum": ["Native", "Advanced", "Upper Intermediate", "Intermediate", "Basic", "Beginner"]
          },
          "color": { "type": "string" },
          "levels": {
            "type": "object",
            "properties": {
              "speaking": { "type": "number", "minimum": 0, "maximum": 100 },
              "listening": { "type": "number", "minimum": 0, "maximum": 100 },
              "reading": { "type": "number", "minimum": 0, "maximum": 100 }
            }
          }
        }
      }
    }
  }
}
