{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Photography Content Schema",
  "type": "object",
  "properties": {
    "photos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "src": { "type": "string" },
          "alt": { "type": "string" },
          "location": { "type": "string" },
          "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
          "timeOfDay": { "type": "string" },
          "occasion": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["id", "src", "alt", "location", "date", "timeOfDay", "occasion", "tags"],
        "additionalProperties": false
      }
    }
  },
  "required": ["photos"],
  "additionalProperties": false
}
