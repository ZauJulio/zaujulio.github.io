{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Articles",
  "type": "object",
  "properties": {
    "articles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slug": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "author": { "type": "string" },
          "readingTime": { "type": "string" },
          "canonical": { "type": "string" },
          "cover": { "type": "string" }
        },
        "required": ["slug", "title", "description", "date", "tags", "author", "readingTime", "canonical", "cover"]
      }
    }
  },
  "required": ["articles"]
}
